<section class="bg-dark minh">
  <div class="container">
    <div class="card card-login mx-auto mt-5">
      <div class="card-header">管理者ログイン</div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <div class="form-label-group">
              <%= f.email_field :email, id: "inputEmail", class: "form-control", autocomplete: "emai", placeholder: "メールアドレス", required: true, autofocus: true %>
              <%= f.label :email, "メールアドレス", for: "inputEmail" %>
            </div>
          </div>
          <div class="form-group">
            <div class="form-label-group">
              <%= f.password_field :password, id: "inputPassword", class: "form-control", autocomplete: "off", placeholder:"パスワード", required: true %>
              <%= f.label :password, for: "inputPassword" do %>
                パスワード<em><%= "(" + @minimum_password_length.to_s + "文字以上)" if @minimum_password_length %></em>
              <% end %>
            </div>
          </div>
          <% if devise_mapping.rememberable? -%>
            <div class="form-group">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "保存する" %>
            </div>
          <% end -%>
          <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
        <% end %>
        <div class="text-left">
          <%= link_to "パスワードの再発行", new_password_path(resource_name), class: 'd-block small mt-3' %>
        </div>
      </div>
    </div>
  </div>
</section>