<section class="bg-dark minh">
  <div class="container">
    <div class="card card-login mx-auto mt-5">
      <div class="card-header">管理者パスワード再発行</div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <div class="form-group">
            <div class="form-label-group">
              <%= f.email_field :email, id: "inputEmail", class: "form-control", autocomplete: "emai", placeholder: "メールアドレス", required: true, autofocus: true %>
              <%= f.label :email, "メールアドレス", for: "inputEmail" %>
            </div>
          </div>
          <%= f.submit "再発行", class: "btn btn-primary btn-block" %>
        <% end %>
      </div>
    </div>
  </div>
</section>