<section class="bg-dark minh">
  <div class="container">
    <div class="card card-register mx-auto mt-5">
      <div class="card-header">確認メール再送信</div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
          <div class="form-group">
            <div class="form-label-group">
              <%= f.email_field :email, id: "inputEmail", class: "form-control", autocomplete: "emai", placeholder: "メールアドレス", required: true, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
              <%= f.label :email, "メールアドレス", for: "inputEmail" %>
            </div>
          </div>
          <%= f.submit "再送信", class: "btn btn-primary btn-block" %>
        <% end %>
        <div class="text-left">
          <%= link_to "パスワードの再発行", new_password_path(resource_name), class: 'd-block small mt-3' %>
          <%= link_to "アカウント凍結解除メールの再送信", new_unlock_path(resource_name), class: 'd-block small' %>
        </div>
      </div>
    </div>
  </div>
</section>